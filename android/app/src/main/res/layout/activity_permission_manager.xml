<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020617"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvPermissionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="yes"
            android:text="@string/permission_center_title"
            android:textColor="#E2E8F0"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPermissionSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:importantForAccessibility="yes"
            android:text="@string/permission_center_subtitle"
            android:textColor="#94A3B8"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvShizukuStatusLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/shizuku_status_label"
            android:textColor="#E2E8F0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShizukuStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:importantForAccessibility="yes"
            android:textColor="#CBD5E1"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/switchShizukuBridge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/shizuku_bridge_switch_desc"
            android:importantForAccessibility="yes"
            android:minHeight="48dp"
            android:text="@string/shizuku_bridge_switch_text"
            android:textColor="#E2E8F0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvBridgeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/shizuku_bridge_hint"
            android:textColor="#94A3B8"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnRequestShizukuPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:contentDescription="@string/request_shizuku_permission_desc"
            android:importantForAccessibility="yes"
            android:minHeight="48dp"
            android:text="@string/request_shizuku_permission_text"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnOpenShizukuApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/open_shizuku_app_desc"
            android:importantForAccessibility="yes"
            android:minHeight="48dp"
            android:text="@string/open_shizuku_app_text"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnRefreshShizukuStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/refresh_shizuku_status_desc"
            android:importantForAccessibility="yes"
            android:minHeight="48dp"
            android:text="@string/refresh_shizuku_status_text"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tvRevokeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:importantForAccessibility="yes"
            android:text="@string/shizuku_revoke_hint"
            android:textColor="#CBD5E1"
            android:textSize="13sp" />

    </LinearLayout>
</ScrollView>
